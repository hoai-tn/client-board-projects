{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "cupola-component",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "The type of component to create",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "name": {
      "type": "string",
      "description": "The name of the component",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }
  },
  "required": ["name"]
}
